{% from "../partials/ctas.njk" import ctas %}
{% from "../partials/responsive-image.njk" import responsiveImage %}

{# this section receives props params and site #}

<section class="section-banner {% if params.paddingTop %}paddingTop{% endif %} {% if params.paddingBottom %}paddingBottom{% endif %}">
  <div class="banner-content">
    <div class="text-wrapper">

      {% if params.title %}
        <h1>{{ params.title }}</h1>
      {% endif %}

      {% if params.subTitle %}
        <p>{{ params.subTitle }}</p>
      {% endif %}

      {% if params.hasCtas %}
        {# use CTAs partial to render links etc #}
        {% set info = params %}
        {{ ctas(info) }}
      {% endif %}

    </div>
    <!-- /.text-wrapper -->

    <div class="media-wrapper">
      {% if params.mediaType === "Image"%}
        {% set image = params.image %}
        {{ responsiveImage(image, site) }}
      {% endif %}

    </div>
  </div>
  <!-- /.banner-content -->
</section>