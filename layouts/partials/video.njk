{% from "./responsive-image.njk" import responsiveImage %}

{% macro video(videoData, siteMeta) %}
  <div class="video js-video-wrapper"  >
    <button class="js-play-button" >
      <div class="play-button"></div>
      {% set image = {
        src: videoData.tn,
        alt: "",
        aspectRatio: videoData.aspectRatio
      } %}
      {{ responsiveImage(image, siteMeta) }}
    </button>
    <div class="overlay">
      <div class="overlay-content" data-video-id={{ videoData.id}} data-video-src={{ video.src }} ></div>
    </div>

  </div>

{% endmacro %}